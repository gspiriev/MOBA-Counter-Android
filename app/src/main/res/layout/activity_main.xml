<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dota_2_art_background_clean"
    android:orientation="vertical"
    tools:context="com.spiriev.android.mobacounter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weight_usage_case"
        android:layout_weight="3">

        <TextView
            android:id="@+id/nature_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#66e0e0e0"
            android:text="Nature"
            android:textAllCaps="true"
            android:textSize="@dimen/team_name_text_size" />

        <Button
            android:id="@+id/plus_three_radiant_kill_id"
            style="@style/ButtonRadiantStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/kill_button_three_text" />

        <Button
            android:id="@+id/plus_one_radiant_kill_id"
            style="@style/ButtonRadiantStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_above="@id/plus_three_radiant_kill_id"
            android:layout_alignParentRight="true"
            android:text="@string/kill_button_one_text" />

        <Button
            android:id="@+id/team_radiant_kill_id"
            style="@style/ButtonRadiantStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_below="@id/plus_three_radiant_kill_id"
            android:text="@string/kill_button_team_text"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/kill_counter_radiant_id"
            style="@style/CounterRadiantStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter_string" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weight_usage_case"
        android:layout_weight="3">

        <TextView
            android:id="@+id/monsters_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#66e0e0e0"
            android:text="Monsters"
            android:textAllCaps="true"
            android:textSize="@dimen/team_name_text_size" />

        <Button
            android:id="@+id/plus_three_dire_kill_id"
            style="@style/ButtonDireStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_centerVertical="true"
            android:text="@string/kill_button_three_text" />

        <Button
            android:id="@+id/plus_one_dire_kill_id"
            style="@style/ButtonDireStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_above="@id/plus_three_dire_kill_id"
            android:text="@string/kill_button_one_text" />

        <Button
            android:id="@+id/team_dire_kill_id"
            style="@style/ButtonDireStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/plus_three_dire_kill_id"
            android:text="@string/kill_button_team_text"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/kill_counter_dire_id"
            style="@style/CounterDireStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter_string" />

    </RelativeLayout>

    <Button
        android:id="@+id/reset_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/weight_usage_case"
        android:layout_gravity="right"
        android:layout_margin="@dimen/reset_button_margin"
        android:layout_weight="1"
        android:background="@drawable/button_style_moba"
        android:text="@string/reset_string"
        android:textSize="@dimen/reset_button_text_size" />
</LinearLayout>
